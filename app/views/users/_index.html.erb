<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.status %></td>
    <td><%= link_to 'Show', book, remote: true %></td>
    <td><%= link_to 'Pay', "/buys/#{book.id}" %></td>
    <td><%= link_to 'Destroy', reserve_path(book), method: :put, remote: true%></td>
    
  </tr>
<% end %>